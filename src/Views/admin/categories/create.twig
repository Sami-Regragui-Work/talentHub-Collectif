{% extends "layout.twig" %}

{% block title %}Nouvelle catégorie{% endblock %}

{% block content %}
<div class="max-w-2xl mx-auto">
    <h2 class="text-2xl font-bold text-white mb-6">Nouvelle catégorie</h2>
    <form method="POST" action="/admin/categories/store" class="bg-gray-800 p-6 rounded-lg border border-gray-700">
        <div class="mb-4">
            <label class="block text-gray-300 mb-2">Nom</label>
            <input type="text" name="name" required class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md text-white">
        </div>
        <button type="submit" class="px-4 py-2 bg-success text-white rounded-md hover:bg-green-600">
            Créer
        </button>
    </form>
</div>
{% endblock %}