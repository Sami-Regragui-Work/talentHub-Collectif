{% extends "layout.twig" %}

{% block title %}Register - SAMVC{% endblock %}

{% block content %}
    <div class="bg-gray-800/90 backdrop-blur-sm rounded-xl p-8 shadow-2xl border-2 border-gray-700/50 max-w-md mx-auto w-full">
        <h1 class="text-3xl font-bold text-white mb-8 text-center">Register</h1>

        {% if errors %}
            <div class="bg-red-900/30 border border-red-700/50 rounded-lg p-4 mb-6">
                {% for error in errors %}
                    <p class="text-red-300 text-sm">{{ error }}</p>
                {% endfor %}
            </div>
        {% endif %}

        <form method="POST" action="/register" class="space-y-6">
            <div class="space-y-2">
                <label for="name" class="block text-sm font-medium text-gray-300">Full Name</label>
                <input type="text" 
                       id="name" 
                       name="name" 
                       required
                       class="w-full px-4 py-3 bg-gray-900/50 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/50 focus:outline-none transition-all duration-200" 
                       placeholder="Enter your full name">
            </div>

            <div class="space-y-2">
                <label for="email" class="block text-sm font-medium text-gray-300">Email</label>
                <input type="email" 
                       id="email" 
                       name="email" 
                       required
                       class="w-full px-4 py-3 bg-gray-900/50 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/50 focus:outline-none transition-all duration-200" 
                       placeholder="Enter your email">
            </div>

            <div class="space-y-2">
                <label for="password" class="block text-sm font-medium text-gray-300">Password</label>
                <input type="password" 
                       id="password" 
                       name="password" 
                       minlength="6" 
                       required
                       class="w-full px-4 py-3 bg-gray-900/50 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/50 focus:outline-none transition-all duration-200" 
                       placeholder="Minimum 6 characters">
            </div>

            <div class="space-y-2">
                <label for="role" class="block text-sm font-medium text-gray-300">I am a...</label>
                <select id="role" 
                        name="role" 
                        required
                        class="w-full px-4 py-3 bg-gray-900/50 border border-gray-600 rounded-lg text-white focus:border-blue-500 focus:ring-2 focus:ring-blue-500/50 focus:outline-none transition-all duration-200">
                    <option value="" disabled selected>Select role</option>
                    <option value="candidate" class="text-gray-900 bg-gray-100 dark:bg-gray-700 dark:text-white">Candidate (Looking for jobs)</option>
                    <option value="recruiter" class="text-gray-900 bg-gray-100 dark:bg-gray-700 dark:text-white">Recruiter (Hiring talent)</option>
                </select>
            </div>

            <button type="submit" 
                    class="w-full bg-blue-700 hover:bg-blue-800 text-white font-medium py-3 px-4 rounded-lg border border-blue-600 transition-all duration-200 shadow-lg hover:shadow-xl focus:ring-4 focus:ring-blue-500/50 focus:outline-none">
                Register
            </button>
        </form>

        <div class="text-center mt-8 pt-6 border-t border-gray-700">
            <p class="text-gray-400 text-sm">Already have an account? 
                <a href="/login" class="text-blue-400 hover:text-blue-300 font-medium transition-colors duration-200">Login here</a>
            </p>
        </div>
    </div>
{% endblock %}
