{% extends "layout.twig" %}

{% block title %}403 Forbidden{% endblock %}

{% block content %}
    <div class="bg-gray-800/90 backdrop-blur-sm rounded-xl p-12 shadow-2xl border-2 border-red-700/50 max-w-md mx-auto w-full text-center space-y-6">
        <!-- Error Icon -->
        <div class="w-24 h-24 mx-auto bg-red-900/50 border-2 border-red-700 rounded-2xl flex items-center justify-center mb-6">
            <svg class="w-12 h-12 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
            </svg>
        </div>

        <div>
            <h1 class="text-5xl font-bold text-white mb-4 bg-gradient-to-r from-red-400 to-red-600 bg-clip-text text-transparent">403</h1>
            <p class="text-xl font-semibold text-gray-200 mb-2">Access Forbidden</p>
            <p class="text-gray-400 text-sm max-w-sm mx-auto">You don't have permission to access this page.</p>
        </div>

        <a href="/login" 
           class="inline-flex items-center gap-2 bg-blue-700 hover:bg-blue-800 text-white font-medium py-3 px-8 rounded-lg border border-blue-600 transition-all duration-200 shadow-lg hover:shadow-xl focus:ring-4 focus:ring-blue-500/50 focus:outline-none">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
            </svg>
            Go to Login
        </a>
    </div>
{% endblock %}
