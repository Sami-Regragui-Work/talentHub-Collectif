{% extends "layout.twig" %}

{% block title %}404 Not Found
{% endblock %}

{% block content %}
	<div
		class="bg-gray-800/90 backdrop-blur-sm rounded-xl p-12 shadow-2xl border-2 border-gray-700/50 max-w-md mx-auto w-full text-center space-y-6">
		<!-- Error Icon -->
		<div class="w-24 h-24 mx-auto bg-gray-900/50 border-2 border-gray-700 rounded-2xl flex items-center justify-center mb-6">
			<svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewbox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
			</svg>
		</div>

		<div>
			<h1 class="text-5xl font-bold text-white mb-4 bg-gradient-to-r from-gray-400 to-gray-200 bg-clip-text text-transparent">404</h1>
			<p class="text-xl font-semibold text-gray-200 mb-2">Page Not Found</p>
			<p class="text-gray-400 text-sm max-w-sm mx-auto">The page you're looking for doesn't exist.</p>
		</div>

		<a href="/login" class="inline-flex items-center gap-2 bg-blue-700 hover:bg-blue-800 text-white font-medium py-3 px-8 rounded-lg border border-blue-600 transition-all duration-200 shadow-lg hover:shadow-xl focus:ring-4 focus:ring-blue-500/50 focus:outline-none">
			<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
			</svg>
			Go to Login
		</a>
	</div>
{% endblock %}
