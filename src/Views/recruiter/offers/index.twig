{% extends "layout.twig" %}

{% block title %}Mes offres{% endblock %}

{% block navigation %}
    {{ parent() }}
{% endblock %}

{% block content %}
<div class="px-4 py-6 sm:px-0">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-3xl font-bold text-white">Mes offres</h2>
        <a href="/recruiter/offers/create" class="px-4 py-2 bg-secondary hover:bg-blue-600 text-white rounded-md">
            + Publier une offre
        </a>
    </div>

    <div class="bg-gray-800 shadow-lg rounded-lg overflow-hidden border border-gray-700">
        <table class="min-w-full divide-y divide-gray-700">
            <thead class="bg-gray-700">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase">Titre</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase">Candidatures</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase">Statut</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-gray-800 divide-y divide-gray-700">
                {% for offer in offers %}
                <tr class="hover:bg-gray-700">
                    <td class="px-6 py-4 text-sm font-medium text-white">{{ offer.title }}</td>
                    <td class="px-6 py-4 text-sm text-gray-300">{{ offer.applicationCount|default('0') }}</td>
                    <td class="px-6 py-4 text-sm">
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                               {{ offer.isArchived ? 'bg-gray-900 text-gray-300' : 'bg-green-900 text-green-300' }}">
                            {{ offer.isArchived ? 'Inactive' : 'Active' }}
                        </span>
                    </td>
                    <td class="px-6 py-4 space-x-2 text-sm">
                        <a href="/recruiter/offers/edit/{{ offer.id }}" class="text-warning hover:text-yellow-400">‚úèÔ∏è</a>
                        <a href="/recruiter/offers/archive/{{ offer.id }}" class="text-danger hover:text-red-400" onclick="return confirm('Archiver cette offre ?')">üóëÔ∏è</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}